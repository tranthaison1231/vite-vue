{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "#/graphql/*": ["src/graphql/*"],
      "#/generated/*": ["src/generated/*"],
      "#/shared/*": ["src/shared/*"],
      "#/pages/*": ["src/pages/*"],
      "#/configs/*": ["src/configs/*"],
      "#/routers/*": ["src/routers/*"],
      "#/assets/*": ["src/assets/*"],
      "#/src/*": ["./src/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
